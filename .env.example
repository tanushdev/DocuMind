# DocuMind Environment Configuration
# Copy this file to .env and add your API keys

# API Settings
DEBUG=false

# Service URLs (for local development outside Docker)
VECTOR_SERVICE_URL=http://localhost:8001
REDIS_URL=redis://localhost:6379

# =====================
# LLM API Keys
# =====================
# Priority: Groq > Gemini > Perplexity > HuggingFace
# You only need ONE of these to work!

# Groq (fastest, recommended) - https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# HuggingFace (fallback) - https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# =====================
# Embedding Settings
# =====================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# =====================
# Chunking Settings
# =====================
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =====================
# Re-ranking Settings
# =====================
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# =====================
# Context Settings
# =====================
MAX_CONTEXT_TOKENS=2048
TOP_K_RETRIEVAL=20
TOP_K_FINAL=5

# =====================
# Cache Settings (seconds)
# =====================
CACHE_TTL_EMBEDDINGS=86400
CACHE_TTL_QUERIES=3600

# =====================
# Upload Settings
# =====================
MAX_FILE_SIZE_MB=50
